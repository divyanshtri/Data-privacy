import random

def generate_password(filename, num_words=4):
    try:
        with open(filename, "r") as file:
            words = [word.strip() for word in file.readlines() if word.strip()]

        selected_words = random.sample(words, num_words)

        password = "-".join(selected_words)

        return password

    except FileNotFoundError:
        print("Error: Dictionary file not found.")
    except ValueError:
        print("Error: Not enough words in dictionary to generate password.")

dictionary_file = "passwords"
password = generate_password(dictionary_file, num_words=4)
if password:
    print("Generated Password:", password)
